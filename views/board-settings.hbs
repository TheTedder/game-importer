{{!< layout}}
<header class="aui-page-header">
  <div class="aui-page-header-inner">
    <div class="aui-page-header-main intro-header">
      <h1>Game Importer Settings</h1>
    </div>
  </div>
</header>

<div class="aui-page-panel main-panel">
  <div class="aui-page-panel-inner">
    <section class="aui-page-panel-item">
      <div class="aui-group">
        <h2>
          Game Providers
        </h2>
        <div class="aui-item">
          <h3>
            Steam
          </h3>
          <form>
            <label for="steam-io">
              Account ID:
            </label>
            <input type="text" name="steam-id">
              {{ids.steam}}
            </input>
            <input type="submit" value="Update" class="aui-button aui-button-primary" />
          </form>
        </div>
      </div>
    </section>
  </div>
</div>1